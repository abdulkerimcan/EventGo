<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:civ_border_width="2dp"
        android:id="@+id/chat_item_imgProfile"
        android:layout_marginLeft="3dp"
        app:civ_border_color="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/chat_item_imgProfile"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:layout_marginLeft="3dp"
        android:text="asdadadadsadada"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_alignTop="@id/chat_item_imgProfile"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_item_bg_left"
        android:id="@+id/chat_item_txtMessage"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/chat_item_img"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:layout_alignTop="@id/chat_item_imgProfile"
        android:layout_marginLeft="3dp"
        android:background="@drawable/chat_item_bg_left"
        android:layout_toRightOf="@id/chat_item_imgProfile"/>

</RelativeLayout>